vpath %.o ${OBJDIR}

INPUT_MGR_SRCS	:= vjAnalogProxy.cpp		\
                   vjDeviceFactory.cpp		\
                   vjDeviceInterface.cpp	\
                   vjDigitalProxy.cpp		\
                   vjGestureProxy.cpp		\
                   vjGloveProxy.cpp		\
                   vjInputManager.cpp		\
                   vjKeyboardProxy.cpp		\
                   vjPosInterface.cpp		\
                   vjPosProxy.cpp		\
                   vjProxyFactory.cpp

INPUT_MGR_OBJECTS	:= ${addprefix ${OBJDIR}/,${INPUT_MGR_SRCS:.cpp=.o}}
DEPEND_FILES		:= ${INPUT_MGR_SRCS:.cpp=.d}

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------
all dbg opt dso ddso obj: ${INPUT_MGR_OBJECTS}

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
CLEAN_FILES	+= ${INPUT_MGR_OBJECTS}

# -----------------------------------------------------------------------------
# Include dependencies generated by make automatically.
# -----------------------------------------------------------------------------
ifndef DO_CLEANDEPEND
    include ${DEPEND_FILES}
endif

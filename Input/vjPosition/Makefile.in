# -----------------------------------------------------------------------------
# Makefile.in for juggler/Input/vjPosition.  It requires GNU make.
# $Id$
# -----------------------------------------------------------------------------

default: all

# Include common definitions.
include @topdir@/Makefile.base

includedir	= @includedir@/Input/vjPosition
srcdir		= @srcdir@
top_srcdir	= @top_srcdir@
INSTALL		= @INSTALL@
VJROOT		= ${top_srcdir}
VJ_SRCDIR	= @VJ_SRCDIR@/Input/vjPosition
WORKDIR		= ${topdir}/Input/vjPosition

# Include source building, dependency and installation.
include ${MKPATH}/vj.compile.mk
include ${MKPATH}/vj.dep.mk
include ${MKPATH}/vj.install.mk

# Search path for source code and object files.
vpath
vpath %.c @srcdir@
vpath %.cpp @srcdir@
vpath %.o ${OBJDIR}

VJPOS_SRCS	:= vjDummyPosition.cpp	\
                   vjPosition.cpp

ifneq (@OS_TYPE@, Win32)
VJPOS_SRCS	+= logiclass.cpp	\
                   vjBird.cpp		\
                   aFlock.cpp		\
                   vjFlock.cpp		\
		   vjMotionStar.cpp     \
		   aMotionStar.cpp
endif

VJPOS_OBJECTS	:= ${addprefix ${OBJDIR}/,${VJPOS_SRCS:.cpp=.o}}
DEPEND_FILES	:= ${VJPOS_SRCS:.cpp=.d}

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------
all dbg opt dso ddso obj: ${VJPOS_OBJECTS}

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
CLEAN_FILES	+= ${VJPOS_OBJECTS}

# -----------------------------------------------------------------------------
# Include dependencies generated by make automatically.
# -----------------------------------------------------------------------------
ifndef DO_CLEANDEPEND
    include ${DEPEND_FILES}
endif

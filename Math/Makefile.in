# -----------------------------------------------------------------------------
# Makefile.in for juggler/Math.  It requires GNU make.
#
# Generated for use on @PLATFORM@
# -----------------------------------------------------------------------------

default: all

# Include common definitions.
include @topdir@/Makefile.base

includedir	= @includedir@/Math
srcdir		= @srcdir@
top_srcdir	= @top_srcdir@
INSTALL		= @INSTALL@
VJROOT		= ${top_srcdir}
VJ_SRCDIR	= @VJ_SRCDIR@/Math
WORKDIR		= ${topdir}/Math

# Include source building, dependency and installation targets.
include ${MKPATH}/vj.compile.mk
include ${MKPATH}/vj.dep.mk
include ${MKPATH}/vj.install.mk

# Search path for source code and object files.
vpath
vpath %.c @srcdir@
vpath %.cpp @srcdir@
vpath %.${OBJ_FILE_SUFFIX} ${OBJDIR}

MATH_SRCS	:= vjCoord.cpp  \
                   vjMatrix.cpp	\
                   vjQuat.cpp	\
		   vjSeg.cpp    \
                   vjVec3.cpp	\
                   vjVec4.cpp

MATH_OBJECTS	:= ${addprefix ${OBJDIR}/,${MATH_SRCS:.cpp=.${OBJ_FILE_SUFFIX}}}
DEPEND_FILES	:= ${MATH_SRCS:.cpp=.d}

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------
all dbg opt dso ddso obj: ${MATH_OBJECTS}

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
CLEAN_FILES	+= ${MATH_OBJECTS}

# -----------------------------------------------------------------------------
# Include dependencies generated by make automatically.
# -----------------------------------------------------------------------------
ifndef DO_CLEANDEPEND
    -include ${DEPEND_FILES}
endif

# -----------------------------------------------------------------------------
# Makefile.in for juggler/SharedMem
# $Id$
# -----------------------------------------------------------------------------

default: all

# Include common definitions.
include @topdir@/Makefile.base

includedir	= @includedir@/SharedMem
srcdir		= @srcdir@
top_srcdir	= @top_srcdir@
VJROOT		= ${top_srcdir}
VJ_SRCDIR	= @VJ_SRCDIR@/SharedMem
WORKDIR		= ${topdir}/SharedMem

# Include source building, dependency and installation targets.
include ${MKPATH}/vj.compile.mk
include ${MKPATH}/vj.dep.mk
include ${MKPATH}/vj.install.mk

# Search path for source code and object files.
vpath
vpath %.c @srcdir@
vpath %.cpp @srcdir@
vpath %.o ${OBJDIR}

SHM_SRCS	:= vjMemory.cpp

ifeq (@SHMEM_SYS@,SGI_IPC)
    SHM_SRCS	+= vjMemPoolSGI.cpp
endif

SHM_OBJECTS	:= ${addprefix ${OBJDIR}/, ${SHM_SRCS:.cpp=.o}}
DEPEND_FILES	:= ${SHM_SRCS:.cpp=.d}

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------
all dbg opt dso ddso obj: ${SHM_OBJECTS}

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
CLEAN_FILES	+= ${SHM_OBJECTS}

# -----------------------------------------------------------------------------
# Include dependencies generated by automatically.
# -----------------------------------------------------------------------------
ifndef DO_CLEANDEPEND
    include ${DEPEND_FILES}
endif

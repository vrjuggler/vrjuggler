# -----------------------------------------------------------------------------
# Makefile.in for juggler/Sound/sl.  It requires GNU make.
# $Id$
#
# Generated for use on @PLATFORM@
# -----------------------------------------------------------------------------

default: all

# Include common definitions.
include @topdir@/Makefile.base

includedir	= @includedir@/Sound/sl
srcdir		= @srcdir@
top_srcdir	= @top_srcdir@

# If we are not building in the current directory (the default), put all the
# object files in the sl subdirectory of ${OBJDIR}.
ifneq (${OBJDIR}, .)
    OBJDIR	:= ${OBJDIR}/sl
endif

INCLUDES	+= @SL_INC@
INSTALL		= @INSTALL@
VJROOT		= ${top_srcdir}
VJ_SRCDIR	= @VJ_SRCDIR@/Sound/sl
WORKDIR		= ${topdir}/Sound/sl

# Include source building, dependency and installation targets.
include ${MKPATH}/vj.compile.mk
include ${MKPATH}/vj.dep.mk
include ${MKPATH}/vj.install.mk

# Search path for source code and object files.
vpath
vpath %.c @srcdir@
vpath %.cpp @srcdir@
vpath %.${OBJ_FILE_SUFFIX} ${OBJDIR}

SL		:= @SL@

SL_SRCS 	:= SlSound.cpp			\
                   SlSoundEngine.cpp		\
                   SlSoundEngineCreator.cpp

SL_OBJECTS	:= ${addprefix ${OBJDIR}/,${SL_SRCS:.cpp=.${OBJ_FILE_SUFFIX}}}
DEPEND_FILES	:= ${SL_SRCS:.cpp=.d}

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------
all dbg opt dso ddso obj: beforebuild ${SL_OBJECTS}

beforebuild:
ifeq (${SL}, Y)
	@${SHELL} ${scriptdir}/mkinstalldirs ${OBJDIR}
endif

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
CLEAN_FILES	+= ${SL_OBJECTS}

# -----------------------------------------------------------------------------
# Include dependencies generated by make automatically.
# -----------------------------------------------------------------------------
ifndef DO_CLEANDEPEND
    include ${DEPEND_FILES}
endif

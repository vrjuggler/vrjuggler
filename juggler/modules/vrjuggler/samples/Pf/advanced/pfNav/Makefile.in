                  @APP_DEBUG_CFLAGS@ $(VJ_INCLUDES) $(EXTRA_CFLAGS)

EXTRA_LFLAGS	= @APP_EXTRA_LFLAGS@ @APP_EXTRA_FLAGS_PF@

                  -I$(VJ_BASE_DIR)/@VJ_SHARE_DIR@/samples/Pf/advanced/nav \
                  -I$(VJ_BASE_DIR)/@VJ_SHARE_DIR@/samples/Pf/advanced/pfTools
VJ_LIBS		= @APP_BASIC_LIBS_BEGIN@ @APP_BASIC_LIBS@		\
                  @APP_VJ_LIBS_GL@ @APP_VJ_LIBS_PF@ $(VJ_AUDIO_LIBS) \
                  @APP_BASIC_LIBS_END@


ifeq (@USE_AUDIOJUGGLER@, Y)
    VJ_INCLUDES +=  -I$(AJ_BASE_DIR)/include
    VJ_LIBS += -L$(AJ_BASE_DIR)/lib@LIBBITSUF@ -lAudioJuggler
    CXXFLAGS += -DUSE_AUDIOJUGGLER

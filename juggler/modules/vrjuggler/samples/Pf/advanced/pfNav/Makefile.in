vpath %.cpp $(srcdir) $(VJ_BASE_DIR)/@VJ_SHARE_DIR@/samples/Pf/advanced/nav
vpath %.cpp $(VJ_BASE_DIR)/@VJ_SHARE_DIR@/samples/tools
vpath %.cpp $(VJ_BASE_DIR)/@VJ_SHARE_DIR@/samples/Pf/advanced/pfTools

# This Performer sample program requires the following libraries to be linked:

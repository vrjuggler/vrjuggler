# -----------------------------------------------------------------------------
# Makefile.in for juggler/samples/ogl/combo
# $Id$
# -----------------------------------------------------------------------------
# IMPORTANT NOTE FOR IRIX USERS:
#     This application will not compile using the standard IRIX 6.x make(1).
#     Use either pmake(1) or gmake(1).
#
# IMPORTANT NOTE FOR WINDOWS USERS:
#     This application will not compile using the nmake utility that comes
#     with Visual C++ 6.0.  You must use GNU make.
# -----------------------------------------------------------------------------

.SUFFIXES: .cpp

srcdir		= @srcdir@

COMPILE		= @CXX@ @DEFS@ $(VJ_INCLUDES) @CPPFLAGS@ @CXXFLAGS@
LINK		= @CXX@ @CPPFLAGS@ @CXXFLAGS@ @EXTRA_LINK_FLAGS@
VJ_INCLUDES	= @INCLUDES@ -I$(VJ_BASE_DIR)/include -I$(srcdir) -I$(srcdir)/../torus -I$(srcdir)/../wand -I$(srcdir)/../cubes
VJ_LIBS		= @TEST_VJ_LIBS_BASIC@ @TEST_VJ_LIBS_GL@ @TEST_LIBS_BASIC@
VPATH		= @srcdir@:@srcdir@/../cubes:@srcdir@/../wand:@srcdir@/../torus

# This test program requires the following libraries to be linked:
#
#     -lGLU -lGL -lXext -lXmu -lX11 -lm -lC
#
# If the library uses POSIX threads, "-lpthread" must also be added to the
# list of libraries.
#
# The proper library path must be specified depending on the Application
# Binary Interface (ABI) used.  For o32 binaries, -L/usr/lib is the
# appropriate path.  For n32 binaries, use -L/usr/lib32.  For 64-bit binaries,
# use -L/usr/lib64.
EXTRA_LIBS	= @TEST_EXTRA_LIBS_BASIC@ @TEST_EXTRA_LIBS_GL@

OBJECTS		= combo.o cubesApp.o wandApp.o torusApp.o

# -----------------------------------------------------------------------------
# Targets.
# -----------------------------------------------------------------------------
default: all

all: combo

combo: $(OBJECTS)
	$(LINK) -o $@ $(OBJECTS) $(VJ_LIBS) $(EXTRA_LIBS)

combo.o: torusApp.h wandApp.h cubesApp.h
cubesApp.o: cubesApp.h
wandApp.o: wandApp.h
torusApp.o: torusApp.h

.cpp.o:
	$(COMPILE) @OBJ_NAME_FLAG@ -c $<

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
clean:
	rm -f Makedepend combo combo.exe combo.ilk $(OBJECTS) *core	\
          so_locations *.?db
	rm -rf ./ii_files

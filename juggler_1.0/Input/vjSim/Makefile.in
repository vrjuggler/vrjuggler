default: all

# Include common definitions.
include @topdir@/Makefile.base

includedir	= @includedir@/Input/vjSim
srcdir		= @srcdir@
top_srcdir	= @top_srcdir@
VJROOT		= ${top_srcdir}
VJ_SRCDIR	= @VJ_SRCDIR@/Input/vjSim
WORKDIR		= ${topdir}/Input/vjSim

# Include source building, dependency and installation targets.
include ${MKPATH}/vj.compile.mk
include ${MKPATH}/vj.dep.mk
include ${MKPATH}/vj.install.mk

# Search path for source code and object files.
vpath
vpath %.c @srcdir@
vpath %.cpp @srcdir@
vpath %.o ${OBJDIR}

DEPEND_SRCS	:= vjSimGloveGesture.cpp \
		   vjSimInput.cpp

VJSIM_OBJECTS := $(addprefix $(OBJDIR)/,$(DEPEND_SRCS:.cpp=.o))

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------
all dbg opt dso ddso obj: ${VJSIM_OBJECTS}

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
CLEAN_FILES	+= ${VJSIM_OBJECTS}


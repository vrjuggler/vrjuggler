# -----------------------------------------------------------------------------
# Makefile.in for juggler/Kernel/GL.  It requires GNU make.
#
# Generated for use on @PLATFORM@
# -----------------------------------------------------------------------------

default: all

# Include common definitions.
include @topdir@/make.defs.mk

includedir	= @includedir@/Kernel/GL
srcdir		= @srcdir@
top_srcdir	= @top_srcdir@
INSTALL		= @INSTALL@
SUBOBJDIR	= $(GL_LIBRARY)
VJROOT		= $(top_srcdir)
VJ_SRCDIR	= @VJ_SRCDIR@/Kernel/GL

SRCS 		= vjGlDrawManager.cpp		\
                  vjGlPipe.cpp			\
                  vjGlWindow.cpp

ifeq (@OS_TYPE@, Win32)
    SRCS	+= vjGlWinWin32.cpp
else
    ifeq (@PLATFORM@, Darwin)
        SRCS    += vjGlOSXWindow.cpp
    else
    	SRCS	+= vjGlxWindow.cpp
    endif
endif

ifeq (@OPENGL_API@, Y)
BEFOREBUILD	= beforebuild
endif

include $(MKPATH)/dpp.obj.mk

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------
beforebuild:
	@$(SHELL) $(scriptdir)/mkinstalldirs $(OBJDIR)

# -----------------------------------------------------------------------------
# Include dependencies generated automatically.
# -----------------------------------------------------------------------------
ifndef DO_CLEANDEPEND
ifndef DO_BEFOREBUILD
    include $(DEPEND_FILES)
endif
endif

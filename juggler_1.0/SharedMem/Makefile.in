default: all

# Include common definitions.
include @topdir@/Makefile.base

includedir	= @includedir@/SharedMem
srcdir		= @srcdir@
top_srcdir	= @top_srcdir@
VJROOT		= ${top_srcdir}
VJ_SRCDIR	= @VJ_SRCDIR@/SharedMem
WORKDIR		= ${topdir}/SharedMem

# Include source building, dependency and installation targets.
include ${MKPATH}/vj.compile.mk
include ${MKPATH}/vj.dep.mk
include ${MKPATH}/vj.install.mk

#--- Search path -------
vpath
vpath %.c @srcdir@
vpath %.cpp @srcdir@
vpath %.o ${OBJDIR}
#------------------------

DEPEND_SRCS	:= vjMemory.cpp

ifeq (@SHMEM_SYS@,SGI_IPC)
    DEPEND_SRCS += vjMemPoolSGI.cpp
endif

SHM_OBJECTS	= $(addprefix $(OBJDIR)/, $(DEPEND_SRCS:.cpp=.o))

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------
all dbg opt dso ddso obj: ${SHM_OBJECTS}

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
CLEAN_FILES	+= ${SHM_OBJECTS}


# -----------------------------------------------------------------------------
# Makefile.in for juggler/samples/ogl/glove
# $Id$
#
# Generated for use on @PLATFORM@
# -----------------------------------------------------------------------------

.SUFFIXES: .cpp .cxx .@OBJ_FILE_SUFFIX@

srcdir		= @srcdir@

COMPILE		= @CXX@ @DEFS@ $(VJ_INCLUDES) @CPPFLAGS@ @CXXFLAGS@ @DBG_FLAGS@
LINK		= @CXX@ @CPPFLAGS@ @CXXFLAGS@ @EXTRA_LINK_FLAGS@
VJ_INCLUDES	= -I../../nav @INCLUDES@ -I$(VJ_BASE_DIR)/include -I$(srcdir)
VJ_LIBS		= @TEST_VJ_LIBS_BASIC@ @TEST_VJ_LIBS_GL@ @TEST_LIBS_BASIC@
VPATH		= @srcdir@

# This test program requires the following libraries to be linked:
#
#     -lGLU -lGL -lXext -lXmu -lX11 -lm -lC
#
# If the library uses POSIX threads, "-lpthread" must also be added to the
# list of libraries.
#
# The proper library path must be specified depending on the Application
# Binary Interface (ABI) used.  For o32 binaries, -L/usr/lib is the
# appropriate path.  For n32 binaries, use -L/usr/lib32.  For 64-bit binaries,
# use -L/usr/lib64.
EXTRA_LIBS	= @TEST_EXTRA_LIBS_BASIC@ @TEST_EXTRA_LIBS_GL@

OBJECTS		= main.@OBJ_FILE_SUFFIX@ gloveApp.@OBJ_FILE_SUFFIX@	\
                  navigation.@OBJ_FILE_SUFFIX@

# -----------------------------------------------------------------------------
# Targets.
# -----------------------------------------------------------------------------
default: all

all: glove

glove: $(OBJECTS)
	$(LINK) -o $@ $(OBJECTS) $(VJ_LIBS) $(EXTRA_LIBS)

main.@OBJ_FILE_SUFFIX@: gloveApp.h
gloveApp.@OBJ_FILE_SUFFIX@: gloveApp.h navigation.h
navigation.@OBJ_FILE_SUFFIX@: navigation.h

.cpp.@OBJ_FILE_SUFFIX@:
	$(COMPILE) @OBJ_NAME_FLAG@ -c $<

.cxx.@OBJ_FILE_SUFFIX@:
	$(COMPILE) @OBJ_NAME_FLAG@ -c $<

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
clean:
	rm -f Makedepend glove glove.exe glove.ilk $(OBJECTS) *core	\
          so_locations *.?db
	rm -rf ./ii_files

default: all

# Include common definitions
include @topdir@/Makefile.base

includedir	= @includedir@/Input/InputManager
srcdir		= @srcdir@
top_srcdir	= @top_srcdir@
VJROOT		= ${top_srcdir}
VJ_SRCDIR	= @VJ_SRCDIR@/Input/InputManager
WORKDIR		= ${topdir}/Input/InputManager

# Include source building, dependency and installation targets.
include ${MKPATH}/vj.compile.mk
include ${MKPATH}/vj.dep.mk
include ${MKPATH}/vj.install.mk

#--- Search path -------
vpath
vpath %.c @srcdir@
vpath %.C @srcdir@
vpath %.o ${OBJDIR}
#------------------------

DEPEND_SRCS	:= vjInputManager.C	\
                   vjDeviceInterface.C	\
                   vjPosInterface.C

INPUT_MGR_OBJECTS := $(addprefix $(OBJDIR)/,$(DEPEND_SRCS:.C=.o))

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------
all dbg opt dso ddso obj: ${INPUT_MGR_OBJECTS}

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
CLEAN_FILES	+= ${INPUT_MGR_OBJECTS}


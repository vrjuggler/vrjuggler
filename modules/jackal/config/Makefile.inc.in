BUILD_JAVA	= @BUILD_JAVA@

config-java:
ifndef NO_JAVA
ifeq ($(BUILD_JAVA), Y)
	@echo "------------------------------------------------"
	@echo "Building Java code for the JCCL config"
	@echo "------------------------------------------------"
	@$(MAKE) java
else
	@echo "------------------------------------------------"
	@echo "JCCL config build skipped"
	@echo "------------------------------------------------"
endif
endif	# ifndef NO_JAVA

# Build the JAR files for the Tweek GUI.
config-jar:
ifndef NO_JAVA
ifeq ($(BUILD_JAVA), Y)
	@$(MAKE) jars
else
	@echo "------------------------------------------------"
	@echo "JCCL config JAR file creation skipped"
	@echo "------------------------------------------------"
endif
endif	# ifndef NO_JAVA

config-pkg-links:
	@$(MAKE) instlinks="$(instlinks)" links

java-install:
ifndef NO_JAVA
ifeq ($(BUILD_JAVA), Y)
	@$(MAKE) config-install
endif
endif

links:
	@$(MAKE) -C jccl instlinks="$(instlinks)" links
ifndef NO_JAVA
ifeq ($(BUILD_JAVA), Y)
ifneq ($(JARS), )
	cd $(instlinks)/bin && \
          for jar in $(JARS); do \
              $(RM_LN) ./$$jar && $(LN_S) $(topdir)/config/$$jar ./$$jar || exit 1; \
          done
endif
ifneq ($(BEANS), )
	cd $(instlinks)/bin/beans && \
          for bean in $(BEANS); do \
              $(RM_LN) $$bean.xml && $(LN_S) $(top_srcdir)/config/$$bean.xml . || exit 1; \
              $(RM_LN) $$bean.jar && $(LN_S) $(topdir)/config/$$bean.jar . || exit 1; \
          done
endif
endif
endif

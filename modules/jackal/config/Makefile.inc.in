BUILD_JAVA=	@BUILD_JAVA@

config-java:
ifndef NO_JAVA
ifeq ($(BUILD_JAVA), Y)
	@echo "------------------------------------------------"
	@echo "Building Java code for the JCCL config"
	@echo "------------------------------------------------"
	@$(MAKE) java
else
	@echo "------------------------------------------------"
	@echo "JCCL config build skipped"
	@echo "------------------------------------------------"
endif
endif	# ifndef NO_JAVA

# Build the JAR files for the Tweek GUI.
config-jar:
ifndef NO_JAVA
ifeq ($(BUILD_JAVA), Y)
	@$(MAKE) jars
else
	@echo "------------------------------------------------"
	@echo "JCCL config JAR file creation skipped"
	@echo "------------------------------------------------"
endif
endif	# ifndef NO_JAVA

java-install:
ifndef NO_JAVA
ifeq ($(BUILD_JAVA), Y)
	@$(MAKE) config-install
endif
endif

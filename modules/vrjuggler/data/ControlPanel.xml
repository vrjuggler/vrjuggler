<?xml version="1.0" encoding="UTF-8"?>
<control_panel title="Choose a category">
   <category label="Display" title="Choose a display"
             icon="org/vrjuggler/vrjconfig/images/display64.png">
      <type label="Display Window" title="Choose a display window"
            token="display_window"
            icon="org/vrjuggler/vrjconfig/images/display64.png"/>
   </category>
   <editor label="Simulator"
           class="org.vrjuggler.vrjconfig.customeditors.display_window.DisplayWindowEditorPanel"
           icon="org/vrjuggler/vrjconfig/images/simulator64.png" />
   <!--
   <editor label="Cluster" class=""
           icon="org/vrjuggler/vrjconfig/images/cluster64.png" />
   -->
   <editor label="CAVE Editor" class="org.vrjuggler.vrjconfig.customeditors.cave.CaveEditor"
           icon="org/vrjuggler/vrjconfig/images/cluster64.png" />
   <wizard label="Cluster Wizard"
           wizard_location="${VJ_BASE_DIR}/${VRJ_DATA_DIR}/beans/wizards/ClusterWizard.jar"
           icon="org/vrjuggler/vrjconfig/images/new_cluster_wizard64.png" />
   <wizard label="VR System Wizard"
           wizard_location="${VJ_BASE_DIR}/${VRJ_DATA_DIR}/beans/wizards/VRSystemWizard.jar"
           icon="org/vrjuggler/vrjconfig/images/new_cluster_wizard64.png" />
   <category label="Devices" title="Choose a device type"
             icon="org/vrjuggler/vrjconfig/images/devices64.png">
      <wizard label="Add Device Wizard"
              wizard_location="${VJ_BASE_DIR}/${VRJ_DATA_DIR}/beans/wizards/NewDeviceWizard.jar"
              icon="org/vrjuggler/vrjconfig/images/new_device_wizard64.png" />
      <type label="Analog" title="Choose an analog device"
            token="analog_device"
            icon="org/vrjuggler/vrjconfig/images/analog_devices64.png"/>
      <type label="Digital" title="Choose a digital device"
            token="digital_device"
            icon="org/vrjuggler/vrjconfig/images/digital_devices64.png"/>
      <type label="Positional" title="Choose a position device"
            token="positional_device"
            icon="org/vrjuggler/vrjconfig/images/positional_devices64.png"/>
   </category>
   <category label="Proxies" title="Choose a proxy type"
             icon="org/vrjuggler/vrjconfig/images/proxies64.png">
      <editor label="All Proxies"
              class="org.vrjuggler.vrjconfig.customeditors.proxyeditor.Editor"
              icon="org/vrjuggler/vrjconfig/images/proxies64.png" />
      <type label="Analog" title="Choose an analog proxy"
            token="analog_proxy"
            icon="org/vrjuggler/vrjconfig/images/analog_proxies64.png"/>
      <type label="Command" title="Choose a command proxy"
            token="command_proxy"
            icon="org/vrjuggler/vrjconfig/images/command_proxies64.png"/>
      <type label="Digital" title="Choose a digital proxy"
            token="digital_proxy"
            icon="org/vrjuggler/vrjconfig/images/digital_proxies64.png"/>
      <type label="Glove" title="Choose a glove proxy"
            token="glove_proxy"
            icon="org/vrjuggler/vrjconfig/images/glove_proxies64.png"/>
      <type label="Keyboard/Mouse" title="Choose a keyboard/mouse proxy"
            token="keyboard_mouse_proxy"
            icon="org/vrjuggler/vrjconfig/images/keyboard_mouse_proxies64.png"/>
      <type label="Positional" title="Choose a position proxy"
            token="position_proxy"
            icon="org/vrjuggler/vrjconfig/images/positional_proxies64.png"/>
      <type label="String" title="Choose a string proxy"
            token="string_proxy"
            icon="org/vrjuggler/vrjconfig/images/string_proxies64.png"/>
   </category>
   <editor label="Audio" class=""
           icon="org/vrjuggler/vrjconfig/images/audio64.png" />
</control_panel>

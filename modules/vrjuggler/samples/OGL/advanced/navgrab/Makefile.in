# -----------------------------------------------------------------------------
# Makefile.in for vrjuggler/samples/OGL/advanced/navgrab
# This requires GNU make.
# -----------------------------------------------------------------------------

all: navgrab@EXEEXT@

APP_NAME=	navgrab@EXEEXT@

# Basic options.
srcdir=		@srcdir@
SRCS=		NavGrabApp.cpp main.cpp

DZR_BASE_DIR=	$(shell flagpoll doozer --get-prefix)
include $(DZR_BASE_DIR)/ext/vrjuggler/dzr.vrjuggler.mk
include $(DZR_BASE_DIR)/ext/vrjuggler/dzr.vrjuggler.glapp.mk

# -----------------------------------------------------------------------------
# Application build targets.
# -----------------------------------------------------------------------------
navgrab@EXEEXT@: $(OBJS)
	$(LINK) $(LINK_OUT)$@ $(OBJS) $(EXTRA_LIBS) $(LIBS)
ifneq ($(srcdir), .)
	#test -h data && rm -f data
	rm -f data
	ln -s $(srcdir)/data data
endif

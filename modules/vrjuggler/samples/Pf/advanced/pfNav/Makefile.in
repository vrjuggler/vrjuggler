# -----------------------------------------------------------------------------
# Makefile.in for vrjuggler/samples/Pf/advanced/pfNav.  It requires GNU make.
# -----------------------------------------------------------------------------

all: pfNav@EXEEXT@

APP_NAME=	pfNav@EXEEXT@

# Basic options.
srcdir=		@srcdir@
COMMON_SRCS=	simplePfNavApp.cpp	\
		FileIO.cpp		\
		pfFileIO.cpp		\
		pfSoundNode.cpp		\
		pfSoundTraverser.cpp	\
		pfTerryCollide.cpp	\
		pfTerryPogoCollide.cpp	\
		pfTerryBoxCollide.cpp	\
		pfMPStats.cpp		\
		velocityNav.cpp

SRCS=		pfNav.cpp $(COMMON_SRCS)


EXTRA_PATH_FOR_SOURCES=	$(VJ_BASE_DIR)/@VJ_SHARE_DIR@/samples/Pf/advanced/nav \
			$(VJ_BASE_DIR)/@VJ_SHARE_DIR@/samples/tools	\
			$(VJ_BASE_DIR)/@VJ_SHARE_DIR@/samples/Pf/advanced/pfTools

include $(VJ_BASE_DIR)/share/vrjuggler/vrj.appdefs.mk
include $(DZR_BASE_DIR)/ext/vrjuggler/dzr.vrjuggler.pfapp.mk

EXTRA_INCLUDES+=	-I$(VJ_BASE_DIR)/@VJ_SHARE_DIR@/samples/Pf/advanced/nav \
			-I$(VJ_BASE_DIR)/@VJ_SHARE_DIR@/samples/Pf/advanced/pfTools

# -----------------------------------------------------------------------------
# Application build targets.
# -----------------------------------------------------------------------------
pfNav@EXEEXT@: $(OBJS)
	$(LINK) $(LINK_OUT)$@ $(OBJS) $(EXTRA_LIBS) $(LIBS)

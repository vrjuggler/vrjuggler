# -----------------------------------------------------------------------------
# Makefile.in for vrjuggler/vrjconfig/customeditors/display_window.  It
# requires GNU make.
#
# Generated for use on @PLATFORM@
# -----------------------------------------------------------------------------

default: all

# Include common definitions.
include @topdir@/make.defs.mk

beandir=		$(bindir)/beans
srcdir=			@srcdir@
top_srcdir=		@top_srcdir@
EXTRA_SRCS_PATH=	$(srcdir)/../tweek/idl
INSTALL=		@INSTALL@
INSTALL_FILES=		
JAVA_IDL_OPTS=		@JAVA_IDL_OPTS@ @JAVA_IDL_GENDIR_OPT@$(srcdir)
JAVA_IDL_INCLUDES=	@JAVA_IDL_INCFLAG@$(top_srcdir)

BEANS=			DisplayWindowEditor

_LOCAL_CLEAN=		1
JAVA_AFTERBUILD=	java_afterbuild

include $(MKPATH)/dpp.obj.mk

# -----------------------------------------------------------------------------
# Uses ant to build the java classes and JARs
# -----------------------------------------------------------------------------
build-editor:
	@echo "------------------------------------------------"
	@echo "Building DisplayWindowEditor java sources"
	@echo "------------------------------------------------"
	$(ANT)

_clean:
	$(ANT) clean

# -----------------------------------------------------------------------------
# Extra targets.
# -----------------------------------------------------------------------------

# This cannot be named 'install' because Doozer++ already defines that.
install-editor:
	@echo "------------------------------------------------"
	@echo "Installing the DisplayWindowEditor code base"
	@echo "------------------------------------------------"
ifneq ($(JARS), )
	for jar in $(JARS) ;						\
          do								\
              $(INSTALL) -m $(FILE_PERMS) $(GROUP_OPT_UNIX)		\
                $(EXTRA_INSTALL_ARGS)
		$(topdir)/vrjconfig/customeditors/display_window/$$jar	\
                $(bindir) || exit 1;					\
          done
endif
ifneq ($(BEANS), )
	for bean in $(BEANS) ;						\
          do								\
              $(INSTALL) -m $(FILE_PERMS) $(GROUP_OPT_UNIX)		\
                $(EXTRA_INSTALL_ARGS)					\
                $(topdir)/vrjconfig/customeditors/display_window/$$bean.jar \
                $(beandir) || exit 1 ;					\
              $(INSTALL) -m $(FILE_PERMS) $(GROUP_OPT_UNIX)		\
                $(EXTRA_INSTALL_ARGS)					\
                $(top_srcdir)/vrjconfig/customeditors/display_window/$$bean.xml \
                $(beandir) || exit 1;					\
          done
endif

ifdef GLOBAL_BUILD
   CLEAN_DIRS+=	$(top_srcdir)/bin
endif

include Makefile.inc
